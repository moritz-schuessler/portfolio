---
import Project from "./Project.astro";

const response = await fetch('https://api.github.com/users/moritz-schuessler/repos');
const repositories = await response.json();

const {width} = Astro.props;
---

<section>
    {
        repositories.map((repository) => {
            return <Project repository={repository}/>
        })
    }
</section>

<style define:vars={{width}}>
    section {
        width: var(--width);
        padding: 25px;
        display: grid;
        grid-auto-flow: row dense;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        overflow: scroll;
    }
</style>

