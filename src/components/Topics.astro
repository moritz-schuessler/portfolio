---
import {Icon} from 'astro-icon'

import technologies from "../library/technologies";

const {topics} = Astro.props
const projectTechnologies = technologies(topics)
---
<div>
    {
        projectTechnologies.map(({name, icon}) => {
            {return icon ? <Icon name={icon} /> : name}
        })
    }
</div>

<style>
    div {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    [astro-icon] {
        width: 2rem;
        height: 2rem;

        margin-inline: 0 1rem;

        filter: grayscale(1);
    }
</style>

