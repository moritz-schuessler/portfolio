---
import Layout from "../layouts/Layout.astro";
import About from "../components/About.astro";
import Projects from "../components/Projects.astro";

const widthAbout = "30dvw";
const widthProjects = "70dvw";
---

<Layout title="Portfolio | Moritz Schüßler">
	<main>
		<About />
		<Projects />
	</main>
</Layout>

<style is:global >
	@font-face {
		font-family: 'Satoshi';
		src: url('/fonts/Satoshi/Satoshi-Variable.woff2') format('woff2'),
		url('/fonts/Satoshi/Satoshi-Variable.woff') format('woff'),
		url('/fonts/Satoshi/Satoshi-Variable.ttf') format('truetype');
		font-weight: 300 900;
		font-display: swap;
		font-style: normal;
	}

	:root {
		--darkColor: 0, 0%, 5%;
		--lightColor: 0, 0%, 95%;
		--accentColor: 39, 87% ,59%;

		--aboutWidth: ${widthAbout};
		--projectsWidth: ${widthProjects};

		font-family: 'Satoshi', sans-serif;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	html {
		color-scheme: dark;
	}

	body {
		margin: 0;
		overscroll-behavior: none;
	}
</style>

<style>
	main {
		display: flex;
		height: 100dvh;
		width: 100dvw;
	}

	@media (max-width: 768px) {
		:root {
			--aboutWidth: 100dvw;
			--projectsWidth: 100dvw;
		}

		main {
			flex-direction: column;
			height: auto;
		}
	}
</style>